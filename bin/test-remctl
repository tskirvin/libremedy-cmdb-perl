#!/usr/bin/perl

##############################################################################
### Configuration ############################################################
##############################################################################

our $SERVER = "cmdb-test.stanford.edu";
 
##############################################################################
### Declarations #############################################################
##############################################################################

use Net::Remctl;

use strict;

##############################################################################
### main () ##################################################################
##############################################################################

my @data = <STDIN>;

my $result = remctl ($SERVER, undef, undef, "cmdb", "register", 
    join ("", @data));

if ($result->error) {
    die "test echo failed with error ", $result->error, "\n";
} else {
    if (my $stderr = $result->stderr) { warn "warning: $stderr\n"; }
    print $result->stdout;
    exit $result->status;
}
